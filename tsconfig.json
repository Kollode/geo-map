{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "dom",
      "es6",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "scripthost",
      "esnext.asynciterable"
    ],
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./dist/"
  ]
}
