{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "lib",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["./test/**.ts", "./src/**/*.ts", "./typings/**/*.d.ts"],
  "exclude": ["./src/xest", "./src/**/*.xest.ts"]
}
